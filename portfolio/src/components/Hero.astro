---
import GitHub from '../icons/GitHub.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import WhatsApp from '../icons/WhatsApp.astro';
import Mail from '../icons/Mail.astro';
---

<div class="grid grid-cols-1 md:grid-cols-[1fr,auto] items-start gap-12 md:gap-16">
  {/* Contenido principal */}
  <div class="flex flex-col items-start">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight">
      Ignacio D
      <span class="text-primary-light dark:text-primary-dark">.</span>
      Aliendres
    </h1>
    
    <div class="flex items-center gap-x-4 text-xl md:text-2xl lg:text-3xl font-semibold tracking-tight mt-3">
      <span>Front-End Developer</span>
      <span class="text-primary-light dark:text-primary-dark">&lt;/&gt;</span>
    </div>

    <p class="text-base md:text-lg text-black/70 dark:text-white/70 mt-6">
      Passionate about crafting exceptional user experiences through thoughtful interface design and seamless interactions.
    </p>

    <div class="flex gap-x-6 mt-8">
      <a 
        href="https://github.com/iadev2005" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-black/70 hover:text-black dark:text-white/70 dark:hover:text-white transition-all duration-300 ease-out hover:scale-110 active:scale-100"
        title="GitHub"
      >
        <span class="sr-only">GitHub</span>
        <GitHub class="w-7 h-7" />
      </a>
      <a 
        href="https://www.linkedin.com/in/ignacio-aliendres-271082255" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-black/70 hover:text-black dark:text-white/70 dark:hover:text-white transition-all duration-300 ease-out hover:scale-110 active:scale-100"
        title="LinkedIn"
      >
        <span class="sr-only">LinkedIn</span>
        <LinkedIn class="w-7 h-7" />
      </a>
      <a 
        href="https://wa.me/584125849038" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-black/70 hover:text-black dark:text-white/70 dark:hover:text-white transition-all duration-300 ease-out hover:scale-110 active:scale-100"
        title="WhatsApp"
      >
        <span class="sr-only">WhatsApp</span>
        <WhatsApp class="w-7 h-7" />
      </a>
      <a 
        href="mailto:iadev0721@gmail.com" 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-black/70 hover:text-black dark:text-white/70 dark:hover:text-white transition-all duration-300 ease-out hover:scale-110 active:scale-100"
        title="Email"
      >
        <span class="sr-only">Email</span>
        <Mail class="w-7 h-7" />
      </a>
    </div>
  </div>

  {/* Avatar */}
  <div class="relative aspect-square w-full max-w-[300px] md:w-[280px] lg:w-[300px] mx-auto md:mx-0">
    <img
      src="/avatar.jpg"
      alt="Ignacio D. Aliendres"
      class="w-full h-full object-cover rounded-2xl"
    />
  </div>
</div> 