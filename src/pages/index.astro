---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Projects from '../components/Projects.astro';
import Courses from '../components/Courses.astro';
import About from '../components/About.astro';
---

<Layout title="IADEV - Portfolio" description="Portfolio personal de IADEV - Desarrollador Full Stack">
  <section id="start" class="py-24">
    <Hero />
  </section>

  <section id="projects" class="py-24">
    <h2 class="text-3xl font-bold mb-16">My Projects</h2>
    <Projects />
  </section>

  <section id="courses" class="py-24">
    <h2 class="text-3xl font-bold mb-16">My Courses</h2>
    <Courses />
  </section>

  <section id="about" class="py-24">
    <h2 class="text-3xl font-bold mb-16">About Me</h2>
    <About />
  </section>
</Layout>
